@{
    ViewBag.Title = "Home Page";
}

<base href="/" />
<div class="row">
    <my-app><i class="fa fa-spinner fa-spin"></i>Loading...</my-app>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_AngularScriptsPartial"); }
    <script>
        System.config({
            packages: {
                "../app": {
                    format: 'register',
                    defaultExtension: 'js'
                }
            }
        });
        System.import('../app/main')
                .then(null, console.error.bind(console));
    </script>
}

